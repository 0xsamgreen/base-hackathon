{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "declaration": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["./app/types", "./node_modules/@types"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}
